<strong><div align="center"><font face="Times New Roman">
<div class="card text-bg-secondary" style="max-width: 30rem; align-content: center;" align="center"><h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control container-fluid", style: "max-width: 18rem;", placeholder: "email" %>
  </div>

  <div class="actions">
   <br> <%= f.submit "Send me reset password instructions" %>
  </div><br>
<% end %>

<br><%= render "devise/shared/links" %>
</div>
</div>
</strong>
